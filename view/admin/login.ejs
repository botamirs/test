<!DOCTYPE html>
<html lang="en">
<head>
    <%-include("../include/header-login.ejs") %>
    <style>
        .g-recaptcha{
    transform:scale(0.85);
    -webkit-transform:scale(0.85);
    transform-origin:0 2;
    -webkit-transform-origin:0 2;
    }

    </style>
</head>
<body class="rtl">
    <form class="form-signin" action="/user/login" method="POST">
        <h1 class="h3 mb-3 font-weight-normal">ورود به بخش مدیریت</h1>
        <%- include("../include/errors.ejs") %>
        <label for="inputEmail" class="sr-only">آدرس ایمیل</label>
        <input
            type="email"
            name="email"
            id="inputEmail"
            class="form-control mb-2"
            placeholder="آدرس ایمیل"
            autofocus
        />
        <label for="inputPassword" class="sr-only">کلمه عبور</label>
        <input
            type="password"
            name="pass"
            id="inputPassword"
            class="form-control"
            placeholder="کلمه عبور"
        />
        <div class="checkbox mb-3">
            <label>
                <input name="remember" type="checkbox" value="remember-me" /> من را
                به خاطر بسپار
            </label>
        </div>
        <div class="form-group">
            <div class="g-recaptcha" data-sitekey=""></div>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">ورود</button>
    </form>
    
    <!-- JS  -->
    <%- include("../include/script.ejs") %>
</body>
</html>