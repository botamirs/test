<!doctype html>
<html class="no-js" lang="en">
<head>
    <%- include("../include/admin/head.ejs") %>
</head>
<body dir="rtl">
    <%- include("../include/admin/header") %> 
    <div class="container-fluid">
        <div class="row">
            <!-- ---------------------------- -->
            <%- include("../include/admin/navbar") %>                 
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
    <h3 class="mt-2 text-center">ساخت پست جدید</h3>
    <div class="d-flex align-items-center justify-content-center">
        <form action="/dashboard/add-post" class="w-50" method="POST">
            <div class="form-group">
                <label for="title">عنوان پست</label>
                <input
                    type="text"
                    class="form-control w-50"
                    name="title"
                    id="title"
                />
            </div>
    
            <div class="form-group">
                <label for="status">وضعیت</label>
                <select name="status" class="form-control w-25" id="status">
                    <option value="عمومی" selected>عمومی</option>
                    <option value="خصوصی">خصوصی</option>
                </select>
            </div>
    
            <div class="form-group">
                <h5>متن اصلی پست</h5>
                <textarea name="body" class="form-control" id="body"></textarea>
            </div>
    
            <div class="row">
                <input type="submit" value="ساخت پست" class="btn btn-success m-2" />
                <a href="/dashboard" class="btn btn-warning m-2">انصراف</a>
            </div>
        </form>
    </div>
    </main>
    </div>
    </div>
    <script src="/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('body', {
            language: "fa",
            width: "80%",
            height: ""
        });
    </script>
    <%- include("../include/script.ejs") %>
</body>
</html>